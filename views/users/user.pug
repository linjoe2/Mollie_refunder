extends ../dashboard.pug
block menu
	ul.navbar-nav.mr-auto
		li.nav-item
			a.nav-link(href='/dashboard') Dashboard 
		//- if user.role == 'admin'
			li.nav-item
				a.nav-link(href='/instellingen') Instellingen
		li.nav-item.active
			a.nav-link(href='/users') Profiel
		li.nav-item
			a.nav-link(href='/users/logout') Uitloggen



block sidemenu
	ul.nav.nav-pills.flex-column
					li.nav-item
						a.nav-link.active(href='/users')
							| Huidige gebruiker
					if user.role == 'admin'
						li.nav-item
							a.nav-link(href='/users/register')
								| Nieuwe gebruiker 	
					li.nav-item
						a.nav-link(href='/users/reset')
							| Wachtwoord wijzigen

block content
	h1 gebruiker
	h4 username:
	p= user.username
	h4 rol:
	p= user.role